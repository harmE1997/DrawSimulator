			<Grid RowDefinitions="auto,auto" ColumnDefinitions="auto,auto,auto,auto" HorizontalAlignment="Center" VerticalAlignment="Center">
				<Border BorderBrush="Black" BorderThickness="1" Grid.Column="0" Grid.Row="0">
					<Grid ColumnDefinitions="150,auto" RowDefinitions="auto,auto,auto,auto,auto,auto" Margin="5">
						<TextBlock Text="Number of pots" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" Margin="5"/>
						<NumericUpDown Grid.Column="0" Grid.Row="0" Width="150" Height="50" Value="{Binding NrPots}" Minimum="2" FontSize="20" VerticalContentAlignment="Center"/>
						<TextBlock Text="Number of allocated teams per pot" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Margin="5"/>
						<NumericUpDown Grid.Column="0" Grid.Row="1" Width="150" Height="50" Value="{Binding NrTeamsPerPot}" Minimum="1" FontSize="20" VerticalContentAlignment="Center"/>
						<CheckBox Grid.Column="0" Grid.Row="2" Content="Allow teams from own pot" IsChecked="{Binding AllowFromOwnPot}"/>
						<CheckBox Grid.Column="1" Grid.Row="2" Content="Classic Draw" IsChecked="{Binding ClassicDraw}"/>
						<Button Grid.Row="3" Grid.ColumnSpan="2" Width="390" Height="75" Command="{Binding cmdRunDraw}" Content="Run Draw" FontSize="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
						<TextBlock Text="Performing the draw might take a few seconds " Grid.ColumnSpan="2" Grid.Row="4" HorizontalAlignment="Center" FontWeight="Bold"/>
						<TextBlock Text="Number of attempts: " Grid.Column="0" Grid.Row="5" Margin="5"/>
						<TextBlock Text="{Binding NrAttempts}" Grid.Column="1" Grid.Row="5" Margin="5"/>
					</Grid>
				</Border>
				<Border BorderBrush="Black" BorderThickness="1" Grid.Column="0" Grid.Row="1">
				<Grid Name="PotViewer" Margin="5" RowDefinitions="auto,auto,auto,auto" ColumnDefinitions="auto,auto">
					<ListBox Width="380" Height="400" Grid.Row="1" Grid.ColumnSpan="2" Margin="5" ItemsSource="{Binding TeamsInCurrentPot}" SelectedItem="{Binding SelectedPotTeam}" />
					<TextBlock Text="{Binding CurrentPotAsString}" Grid.Row="0"/>
					<Button Grid.Row="2" Grid.Column="1" Width="180" Height="40" Command="{Binding cmdShowNextPot}" Content="Next Pot" FontSize="20" VerticalContentAlignment="Center" HorizontalAlignment="Center"/>
					<Button Grid.Row="2" Grid.Column="0" Width="180" Height="40" Command="{Binding cmdShowPreviousPot}" Content="Previous Pot" FontSize="20" VerticalContentAlignment="Center" HorizontalAlignment="Center"/>
					<Button Grid.Row="3" Grid.Column="0" Width="180" Height="40" Margin="5" Command="{Binding cmdRemoveTeamFromPot}" Content="Remove Team" FontSize="20" VerticalContentAlignment="Center" HorizontalAlignment="Center"/>
					<Button Grid.Row="3" Grid.Column="1" Width="180" Height="40" Margin="5" Command="{Binding cmdClearPot}" Content="Clear Pot" FontSize="20" VerticalContentAlignment="Center" HorizontalAlignment="Center"/>
				</Grid>
				</Border>
				<Border BorderBrush="Black" BorderThickness="1" Grid.Column="2" Grid.RowSpan="2">
					<Grid Name="TeamsViewer" Margin="5" RowDefinitions="auto,auto,auto,auto">
						<TextBlock Text="Available Teams" Grid.Row="0"/>
						<DataGrid Width="350" Height="710" Grid.Row="1" Margin="5" ItemsSource="{Binding AvailableTeams}" SelectedItem="{Binding SelectedAvailableTeam}" AutoGenerateColumns="True" />
						<Button Grid.Row="2" Width="350" Height="40" Command="{Binding cmdAddSelectedTeamToPot}" Content="Add selected team to current pot" FontSize="20" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
					</Grid>
				</Border>
				<Border BorderBrush="Black" BorderThickness="1" Grid.Column="3" Grid.RowSpan="2">
					<Grid Name="ResultViewer" RowDefinitions="auto,auto">
						<TextBlock Text="Results" Grid.Row="0" Margin="5"/>
						<ListBox ItemsSource="{Binding DrawResults}" Width="400" Height="750" Grid.Row="1" Margin="5"/>
					</Grid>
				</Border>
			</Grid>
